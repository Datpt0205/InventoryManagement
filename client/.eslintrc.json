{
    "parser": "@typescript-eslint/parser",
    "extends": [
      "eslint:recommended",
      "plugin:@typescript-eslint/recommended"
    ],
    "plugins": ["@typescript-eslint"],
    "rules": {
      // Tắt hoàn toàn cảnh báo về any
      "@typescript-eslint/no-explicit-any": "off"
    },
    "env": {
      "es6": true,
      "node": true,
      "browser": true
    }
}
